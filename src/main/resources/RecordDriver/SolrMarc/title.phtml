<?php if (has_content($fields, 'ShortTitle')): ?>
    <?php echo get_content($fields, 'ShortTitle'); ?>
    <?php if (has_content($fields, 'SubTitle')) { echo ' : ' . get_content($fields, 'SubTitle'); } ?>
    <?php if (has_content($fields, 'TitleSection')) { echo ' / ' . get_content($fields, 'TitleSection'); } ?>
    <?php if (has_content($fields, 'TitleStatement')) { echo ' / ' . get_content($fields, 'TitleStatement'); } ?>
