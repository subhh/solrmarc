        <?php echo ' ; ' . implode(' ; ', get_content($fields, 'TitleAdditionalPart')); ?>
        <?php if (has_content($fields, 'TitleAdditionalVolume')) { echo ' / ' . implode(' / ', get_content($fields, 'TitleAdditionalVolume')); } ?>
        <?php if (has_content($fields, 'TitleAdditionalStatement')) { echo ' / ' . implode(' / ', get_content($fields, 'TitleAdditionalStatement')); } ?>
    <?php endif; ?>
